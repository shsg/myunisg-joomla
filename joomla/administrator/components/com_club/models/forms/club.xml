<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field
            name="id"
            type="hidden"
    />
    <field
			name="category_id"
			type="category"
			extension="com_club"
			class="inputbox"
			default=""
			label="COM_CLUB_ADMIN_LABEL_CATEGORY"
			description="COM_CLUB_ADMIN_LABEL_CATEGORY">
      <option value="0">Keine Kategorie</option>
    </field>
    <field
			name="manager_user_id"
			type="user"
			class="inputbox"
			default=""
			label="COM_CLUB_ADMIN_LABEL_USER"
			description="COM_CLUB_ADMIN_LABEL_USER">
    </field>
    <field
            name="name"
            type="text"
            label="COM_CLUB_ADMIN_LABEL_CLUB_NAME"
            size="40"
            class="inputbox"
            required="true"
            default=""
    />
    <field
            name="year_founded"
            type="int"
            label="COM_CLUB_ADMIN_LABEL_CLUB_YEAR_FOUNDED"
            size="40"
            class="inputbox"
            default=""
    />
    <field
            name="description"
            type="textarea"
            label="COM_CLUB_ADMIN_LABEL_CLUB_DESCRIPTION"
            size="40"
            rows="15"
            class="te"
            default=""
    />    
    <field
            name="address1"
            type="text"
            label="COM_CLUB_ADMIN_LABEL_CLUB_ADDRESS1"
            size="40"
            class="inputbox"
            default=""
    />    
    <field
            name="address2"
            type="text"
            label="COM_CLUB_ADMIN_LABEL_CLUB_ADDRESS2"
            size="40"
            class="inputbox"
            default=""
    />    
    <field
            name="address3"
            type="text"
            label="COM_CLUB_ADMIN_LABEL_CLUB_ADDRESS3"
            size="40"
            class="inputbox"
            default=""
    />    
    <field
            name="zip"
            type="text"
            label="COM_CLUB_ADMIN_LABEL_CLUB_ZIP"
            size="40"
            class="inputbox"
            required="true"
            default=""
    />    
    <field
            name="city"
            type="text"
            label="COM_CLUB_ADMIN_LABEL_CLUB_CITY"
            size="40"
            class="inputbox"
            required="true"
            default=""
    />    
    <field
            name="email"
            type="text"
            label="COM_CLUB_ADMIN_LABEL_CLUB_MAIL"
            size="40"
            class="inputbox"
            required="true"
            default=""
    />
    <field
            name="website"
            type="text"
            label="COM_CLUB_ADMIN_LABEL_CLUB_WEBSITE"
            size="40"
            class="inputbox"
            default=""
    />
  </fieldset>
</form>
