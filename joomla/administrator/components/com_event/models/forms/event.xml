<?xml version="1.0" encoding="utf-8"?>
<form addFieldPath="/administrator/components/com_event/models/fields/">
  <fieldset>
    <field
            name="id"
            type="hidden"
    />
    <field
			name="category_id"
			type="category"
			extension="com_event"
			class="inputbox"
			default=""
			label="COM_EVENT_ADMIN_LABEL_CATEGORY">
    </field>
	<field
		name="club_id"
		label="COM_EVENT_ADMIN_LABEL_CLUB"
		type="eventClubs"
	/>
    <field
            name="name"
            type="text"
            label="COM_EVENT_ADMIN_LABEL_NAME"
            size="40"
            class="inputbox"
            required="true"
            default=""
    />
	
    <field
            name="date_begin"
            type="calendar"
            format="%d.%m.%Y"
			required="true"
            label="COM_EVENT_ADMIN_LABEL_DATE_BEGIN"
            size="40"
            class="inputbox"
            default=""
    />
    <field
            name="date_end"
            type="calendar"
			format="%d.%m.%Y"
            label="COM_EVENT_ADMIN_LABEL_DATE_END"
            size="40"
            class="inputbox"
            default=""
    />
    <field
            name="place"
            type="text"
            label="COM_EVENT_ADMIN_LABEL_PLACE"
            size="40"
            class="inputbox"
            default=""
    />    
    <field
            name="description"
            type="textarea"
            label="COM_EVENT_ADMIN_LABEL_DESCRIPTION"
            cols="30"
            rows="8"
            class="inputbox"
            default=""
    />
  </fieldset>
</form>
